	static float getRandomFloat(float min, float max);
	static unsigned int getRandomUnsignedInt(unsigned int min, unsigned int max);
private:
	unsigned int z1 = 12345, z2 = 12345, z3 = 12345, z4 = 12345;
};

#endif /* RNG_H_ */
