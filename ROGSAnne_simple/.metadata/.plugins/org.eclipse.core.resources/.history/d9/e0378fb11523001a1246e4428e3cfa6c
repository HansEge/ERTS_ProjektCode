#include "Setup.h"
#include <string>
#include <limits>

#define NUM_COORDS 5

Setup::Setup(SystemContext* pSC) {
	this->_pSC = pSC;
}

Setup::~Setup() {
	// TODO Auto-generated destructor stub
}

Population Setup::InitialPop(){

	int n = 0;
	std::string coords;

	for(int i = 0; i <= POPULATION_SIZE; i++)
	{
		for(int k = 0; k <= NUM_COORDS; k++)
		{

			n = ConvertRandNum();
			coords[k] = 'A' + n;
		}

	    this->_pSC->popA->chromosomes[i] = coords;       // Convert to a character from a-z
	}


}

//returns a random number between 0:2^32
unsigned int Setup::RNG(void)
{
   static unsigned int z1 = 12345, z2 = 12345, z3 = 12345, z4 = 12345;
   unsigned int b;

   b  = ((z1 << 6) ^ z1) >> 13;
   z1 = ((z1 & 4294967294U) << 18) ^ b;
   b  = ((z2 << 2) ^ z2) >> 27;
   z2 = ((z2 & 4294967288U) << 2) ^ b;
   b  = ((z3 << 13) ^ z3) >> 21;
   z3 = ((z3 & 4294967280U) << 7) ^ b;
   b  = ((z4 << 3) ^ z4) >> 12;
   z4 = ((z4 & 4294967168U) << 13) ^ b;

   return (z1 ^ z2 ^ z3 ^ z4);
}

unsigned int Setup::ConvertRandNum(){

	unsigned int OldRange, OldMax, OldMin, NewMax, NewMin, NewRange, NewValue;

	OldMax = std::numeric_limits<unsigned int>::max();
	OldMin = 0;
	NewMax = NUM_COORDS;
	NewMin = 0;


	OldRange = (OldMax - OldMin);
	NewRange = (NewMax - NewMin);
	NewValue = (((OldValue - OldMin) * NewRange) / OldRange) + NewMin


	OldRange = ;
	NewRange = NUM_COORDS;
	NewValue = (((RNG()) * NewRange) / OldRange);

	return NewValue;

}
