#include "Setup.h"
#include <stdlib.h>     /* srand, rand */
#include <time.h>       /* time */



Setup::Setup(SystemContext* pSC) {
	this->_pSC = pSC;
}

Setup::~Setup() {
	// TODO Auto-generated destructor stub
}

Population Setup::InitialPop(){

	Population* p = new Population();


	for(int i = 0; i <= POPULATION_SIZE; i++)
	{
		int n = RNG(5);
		char c;

	    c = 'A' + n;       // Convert to a character from a-z
	}


}

int Setup::RNG(int numCoords){

	int number = 0;
	int numberOfCoords = numCoords;
	/* initialize random seed: */
	  srand (time(NULL));

	  /* generate number between 1 and numberOfCoords: */
	  number = rand() % numberOfCoords + 1;

	  return number;
}
